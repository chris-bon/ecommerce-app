<h1>Update <%= @product.name %></h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div><%= label_tag :name, 'Name' %>
       <%= text_field_tag :name, @product.name %></div>
  <div><%= label_tag :price, 'Price' %>
       <%= text_field_tag :price, @product.price %></div>
  <div><%= label_tag :image, 'Image' %>
       <%= text_field_tag :image, @product.image %></div>
  <div><%= label_tag :description, 'Description' %>
       <%= text_field_tag :description, @product.description %></div>
  <%= submit_tag 'Update Product!' %>
<% end %>

<hr />
<%= link_to 'Home', '/' %>